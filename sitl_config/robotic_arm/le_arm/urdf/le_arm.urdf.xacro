                rpy="0 0 0" />
            <mass
                value="0.013253" />
            <inertia
                ixx="2.333E-06"
                ixy="-7.9684E-09"
                ixz="4.9095E-09"
                iyy="1.7076E-06"
                iyz="1.1168E-07"
