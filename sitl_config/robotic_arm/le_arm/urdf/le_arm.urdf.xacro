<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find le_arm)/urdf/le_arm.transmission.xacro" />
    <xacro:include filename="$(find le_arm)/urdf/le_arm_gripper.urdf.xacro" />
    <xacro:macro name="le_arm" params="parent *origin">  
        <joint name="arm_base_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="arm_base_link"/>
            <xacro:insert_block name="origin"/>
        </joint>

        <link
            name="arm_base_link">
            <inertial>
            <origin
                xyz="6.8888E-08 0.0005198 -0.060933"
                rpy="0 0 0" />
            <mass
                value="0.23834" />
            <inertia
                ixx="0.00014646"
                ixy="-4.6203E-05"
                ixz="2.9588E-12"
                iyy="0.00021227"
                iyz="-5.2784E-06"
                izz="0.00027887" />
            </inertial>
            <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                filename="package://le_arm/meshes/arm/base_link.STL" />
            </geometry>
            <material
                name="">
                <color
                rgba="0.64706 0.51765 0 1" />
            </material>
            </visual>
            <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                filename="package://le_arm/meshes/arm/base_link.STL" />
            </geometry>
            </collision>
        </link>

        <gazebo reference="arm_base_link">
            <implicitSpringDamper>1</implicitSpringDamper>
            <mu1>100000</mu1>
            <mu2>100000</mu2>
            <kp>100000000.0</kp>
            <kd>1.0</kd>
        </gazebo> 

        <link
            name="shoulder_link">
