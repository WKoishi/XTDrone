        </link>

                
        <gazebo reference="shoulder_link">
            <implicitSpringDamper>1</implicitSpringDamper>
            <mu1>100000</mu1>
            <mu2>100000</mu2>
            <kp>100000000.0</kp>
            <kd>1.0</kd>
        </gazebo> 

        <joint
            name="shoulder_pan_joint"
            type="revolute">
            <origin
            xyz="0 0.0895 0"
            rpy="2.4302 1.5708 0" />
            <parent
            link="arm_base_link" />
            <child
            link="shoulder_link" />
            <axis
            xyz="-1 0 0" />
            <limit
            lower="-3.14"
            upper="3.14"
            effort="100"
            velocity="100" />
        </joint>
        <link
